<div class="flex flex-wrap justify-center items-stretch mx-auto">
  <%= link to: Routes.user_settings_path(@conn, :edit),
    class: "flex flex-col items-center bg-white border-r-8 br-primary-light mx-8 mb-8 flex-1 mb-8 md:mb-8 sm:flex-initial border-r-8 br-primary-light shadow-lg rounded" do %>
