<div class="my-24">
  <h2 style="text-align: center">Resend confirmation instructions</h2>

  <div class="flex flex-wrap justify-center items-stretch mx-auto my-10 live-inside-box">
    <%= form_for :user, Routes.user_confirmation_path(@conn, :create), [class: "p-4 m-6 live-section-box"], fn f -> %>
      <div class="flex items-start section-title">
        <span class="rounded text-white p-2 leading-none flex items-center title-pill full-width">
          User confirmation
        </span>
      </div>

      <div class="flex flex-col items-center text-white px-4 py-6">
        <div class="mb-4">
          <%= label f, :email %>
          <%= email_input f, :email, required: true, class: "text-input-effect" %>
        </div>
      </div>

      <div class="mt-auto flex items-center px-4" style="width: 100%">
        <%= submit "Resend confirmation instructions", class: "modal-button modal-submit-button full-width" %>
      </div>
    <% end %>
  </div>
</div>
